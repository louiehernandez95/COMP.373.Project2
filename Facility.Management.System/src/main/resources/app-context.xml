<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <description>Wiring the dependencies for the Facility Management System.</description>
    <context:component-scan base-package="Main" />
    <!-- ********** Student_Detail ********** -->

    <bean id="address"
          class="Student_Detail.AddressImpl"
          scope="prototype">
    </bean>
    <bean id="student"
          class="Student_Detail.StudentImpl"
          scope="prototype">
    </bean>

    <!-- ********** Facility ********** -->
    <bean id="facility"
          class="Facility.Facility"
          scope="prototype">
    </bean>

    <bean id="floors"
          class="Facility.FloorsImpl"
          scope="prototype">
    </bean>

    <bean id="inspection"
          class="Facility.InspectionImpl"
          scope="prototype">
    </bean>

    <bean id="unit"
          class="Facility.UnitImpl"
          scope="prototype">
    </bean>
    <!-- ********** Facility_Maintenance ********** -->
    <bean id="maintenance"
          class="Facility_Maintenance.MaintenanceImpl"
          scope="prototype">
    </bean>
    <!-- ********** Usage ********** -->
    <bean id="facilityUse"
          class="Usage.FacilityUse"
          scope="prototype">
    </bean>

    <bean id="maintenanceUsage"
          class="Usage.MainRequest"
          scope="prototype">
    </bean>
</beans>